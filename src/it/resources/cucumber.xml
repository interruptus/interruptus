<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<import resource="classpath*:/applicationContext.xml"/>

	<bean id="jerseyClientTest" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="staticMethod"   value="com.sun.jersey.api.client.Client.create"/>
    </bean>

    <bean class="org.cad.interruptus.features.steps.TypeConfigStepDef">
        <constructor-arg value="http://localhost:8080/api/"/>
    </bean>

</beans>
